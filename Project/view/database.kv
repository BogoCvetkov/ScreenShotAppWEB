#:kivy 2.0
#:kivy 2.0

<DataBaseScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "resources/background/app_bg_2.png"
    FloatLayout:
        Label:
            id: profile_log
            size_hint_y: None
            font_size: "17sp"
            pos_hint: {"y":0.78, "left":0.500}
            text: ''
            color: 0,0,0,0.8
            bold: "true"
        TextInput:
            id: user_email
            hint_text: 'Default Email'
            pos_hint: {"y":0.70, "right":0.720}
            multiline: False
            size_hint: 0.4,None
            height: "35dp"
        TextInput:
            id: email_body
            hint_text: 'Email Body Template'
            pos_hint: {"y":0.25, "right":0.720}
            multiline: True
            size_hint: 0.4,0.4
            height: "35dp"
        Button:
            text: "Add to Database"
            size_hint: 0.4,None
            height: "35dp"  
            pos_hint:{"y":0.15, "right":0.720}
            on_release: root.add_email()
        Button:
            text: "Back"
            size_hint: 0.18,None
            height: "35dp"
            pos_hint:{"y":0.02, "right":0.20}
            on_press: 
                app.root.current = "main_menu_screen"
                root.manager.transition.direction = "right"
        Button:
            text: "Add Pages"
            size_hint: 0.18,None
            height: "35dp"
            pos_hint:{"y":0.02, "right":0.978}
            on_press: 
                app.root.current = "add_pages_screen"
                root.manager.transition.direction = "left"
                