#:kivy 2.0
#:kivy 2.0

<FastFlowScreen>:
    scroll_text:scroll_text
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "resources/background/app_bg_4.png"
    FloatLayout:
        Label:
            size_hint_y: None
            font_size: "30sp"
            pos_hint: {"y":0.78, "left":0.500}
            text: 'Fast Capture and Send Flow'
            color: 0,0,0,0.8
            bold: "true"
        Button:
            text: "Capture All and Send"
            size_hint: 0.4,None
            height: "40dp"
            font_size: 20
            pos_hint:{"y":0.72, "right":0.700}
            on_release: root.fast_capture()
        Label:
            size_hint_y: None
            font_size: "20sp"
            pos_hint: {"y":0.58, "left":0.500}
            text: 'Status:'
            color: 0,0,0,0.8
            bold: "true"
        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint:None,None
            bar_color: 0.4,0.5,0.8,1
            bar_width: 9
            scroll_type: ['bars', 'content']
            pos_hint: {"y":0.12, "right":0.820}
            height: 300
            width: 500
            Label:
                id:scroll_text
                size_hint_y:None
                size: self.texture_size
                text:  '\n\n1 Page ≈ 20 seconds\n5 Pages ≈ 1 minute and 30 sec\n20 Pages ≈ 6~7 minutes'
                color: 0,0,0,0.7
                bold: "true"
        Label:
            id:sent_label
            size_hint_y: None
            font_size: "20sp"
            pos_hint: {"y":0.38, "right":0.630}
            text: ''
            color: 0,1,0,0.8
            bold: "true"
        Button:
            text: "Back"
            size_hint: 0.18,None
            height: "35dp"
            pos_hint:{"y":0.02, "right":0.20}
            on_press: 
                app.root.current = "main_menu_screen"
                root.manager.transition.direction = "right"